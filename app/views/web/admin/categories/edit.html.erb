<h2 class="mb-3">Редактирование категории</h2>
<%= form_with model: @category, url: admin_category_path(@category), local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, 'Название', class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>
  <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
  <%= link_to 'Отмена', admin_categories_path, class: 'btn btn-link' %>
<% end %>
