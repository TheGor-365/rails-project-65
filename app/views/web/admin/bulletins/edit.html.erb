<h2 class="mb-3">Редактирование объявления</h2>
<%= form_with model: @bulletin, url: admin_bulletin_path(@bulletin), local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, 'Название', class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control', maxlength: 50, required: true %>
  </div>
  <div class="mb-3">
    <%= f.label :description, 'Описание', class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control', rows: 6, maxlength: 1000, required: true %>
  </div>
  <div class="mb-3">
    <%= f.label :category_id, 'Категория', class: 'form-label' %>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, {}, class: 'form-select', required: true %>
  </div>
  <div class="mb-3">
    <%= f.label :image, 'Изображение (≤ 5 МБ)', class: 'form-label' %>
    <%= f.file_field :image, class: 'form-control', accept: 'image/*' %>
  </div>
  <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
  <%= link_to 'Отмена', admin_bulletins_path, class: 'btn btn-link' %>
<% end %>
