<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="mb-0">Объявления</h2>
  <%= link_to 'Категории', admin_categories_path, class: 'btn btn-outline-secondary btn-sm' %>
</div>

<div class="p-3 bg-light rounded mb-3">
  <%= search_form_for @q, url: admin_bulletins_path, method: :get do |f| %>
    <div class="row g-2">
      <div class="col-4">
        <%= f.search_field :title_cont, class: "form-control", placeholder: "Название…" %>
      </div>
      <div class="col-3">
        <%= f.select :category_id_eq,
              options_from_collection_for_select(Category.order(:name), :id, :name, @q.category_id_eq),
              { include_blank: "Любая категория" },
              class: "form-select" %>
      </div>
      <div class="col-3">
        <%= f.select :state_eq,
              Bulletin.aasm.states.map(&:name),
              { include_blank: "Любой статус" },
              class: "form-select" %>
      </div>
      <div class="col-2">
        <%= f.search_field :user_email_cont, class: "form-control", placeholder: "Email пользователя…" %>
      </div>
    </div>
    <div class="mt-2">
      <%= f.submit "Фильтровать", class: "btn btn-primary me-2" %>
      <%= link_to "Сброс", admin_bulletins_path, class: "btn btn-outline-primary" %>
    </div>
  <% end %>
</div>

<table class="table table-hover align-middle">
  <thead>
    <tr>
      <th>Название</th>
      <th>Категория</th>
      <th>Пользователь</th>
      <th>Статус</th>
      <th class="text-end">Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @bulletins.each do |b| %>
      <tr>
        <td class="w-50"><%= link_to b.title, admin_bulletin_path(b) %></td>
        <td><%= b.category.name %></td>
        <td><%= b.user&.email || b.user&.name %></td>
        <td><span class="badge text-bg-secondary"><%= b.state %></span></td>
        <td class="text-end">
          <% if b.may_publish? %>
            <%= button_to "Опубликовать", publish_admin_bulletin_path(b),
                  method: :patch, class: "btn btn-sm btn-success" %>
          <% end %>
          <% if b.may_reject? %>
            <%= button_to "Отклонить", reject_admin_bulletin_path(b),
                  method: :patch, class: "btn btn-sm btn-warning" %>
          <% end %>
          <% if b.may_archive? %>
            <%= button_to "В архив", archive_admin_bulletin_path(b),
                  method: :patch, class: "btn btn-sm btn-outline-secondary" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-3">
  <%= paginate @bulletins, params: request.query_parameters %>
</div>
