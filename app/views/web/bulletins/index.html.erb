<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="mb-0">Объявления</h2>
  <% if signed_in? %>
    <%= link_to "Создать", new_bulletin_path, class: "btn btn-primary btn-sm" %>
  <% end %>
</div>

<div class="row g-3">
  <% @bulletins.each do |b| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card h-100">
        <% if b.image.attached? %>
          <%= image_tag b.image, class: "card-img-top", alt: b.title %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title mb-1"><%= b.title %></h5>
          <div class="text-muted small mb-2">
            Категория: <%= b.category.name %>
          </div>
          <p class="card-text"><%= truncate(b.description, length: 140) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
