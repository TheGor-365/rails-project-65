<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="mb-0">Объявления</h2>
  <% if signed_in? %>
    <%= link_to "Создать", new_bulletin_path, class: "btn btn-primary btn-sm" %>
  <% end %>
</div>

<div class="p-3 bg-light rounded mb-3">
  <%= search_form_for @q, url: root_path, method: :get do |f| %>
    <div class="row my-2">
      <div class="col-6">
        <div class="mb-3">
          <%= f.search_field :title_cont, class: "form-control", placeholder: "Поиск по названию…" %>
          <small class="form-text text-muted">Искать по названию объявления</small>
        </div>
      </div>
      <div class="col-4">
        <div class="mb-3">
          <%= f.select :category_id_eq,
                options_from_collection_for_select(Category.order(:name), :id, :name, @q.category_id_eq),
                { include_blank: "Любая категория" },
                class: "form-select" %>
          <small class="form-text text-muted">Выбрать категорию</small>
        </div>
      </div>
      <div class="col-2 d-flex align-items-start gap-2">
        <%= f.submit "Искать", class: "btn btn-primary me-2" %>
        <%= link_to "Сброс", root_path, class: "btn btn-outline-primary" %>
      </div>
    </div>
  <% end %>
</div>

<div class="row g-3">
  <% @bulletins.each do |b| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card h-100">
        <% if b.image.attached? %>
          <%= image_tag b.image, class: "card-img-top", alt: b.title %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title mb-1"><%= b.title %></h5>
          <div class="text-muted small mb-2">
            Категория: <%= b.category.name %>
          </div>
          <p class="card-text"><%= truncate(b.description, length: 140) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-3">
  <%= paginate @bulletins %>
</div>
