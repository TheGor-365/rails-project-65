<h2 class="mb-3">Новое объявление</h2>

<%= form_with model: @bulletin, url: bulletins_path, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Название", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", maxlength: 50, required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Описание", class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 6, maxlength: 1000, required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :category_id, "Категория", class: "form-label" %>
    <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: "form-select", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :image, "Изображение (≤ 5 МБ)", class: "form-label" %>
    <%= f.file_field :image, class: "form-control", accept: "image/*", required: true %>
  </div>

  <%= f.submit "Создать", class: "btn btn-primary" %>
<% end %>
