<%= form_with model: bulletin, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Заголовок", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Описание", class: "form-label" %>
    <%= f.text_area :description, rows: 5, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :category_id, "Категория", class: "form-label" %>
    <%= f.number_field :category_id, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :image, "Изображение", class: "form-label" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
